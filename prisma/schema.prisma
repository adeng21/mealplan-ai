// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  UserAllergy UserAllergy[]
  UserDiet    UserDiet[]
  ServingSize Int           @default(2)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model UserAllergy {
  id          String      @id @unique
  user        User        @relation(fields: [userId], references: [id])
  userId      Int
  allergyType AllergyType
}

enum AllergyType {
  SHELLFISH
  FISH
  GLUTEN
  DAIRY
  PEANUT
  TREENUT
  SOY
  EGG
  SESAME
  NIGHTSHADE
  WHEAT
}

model UserDiet {
  id       String   @id @unique
  user     User     @relation(fields: [userId], references: [id])
  userId   Int
  dietType DietType
}

enum DietType {
  KETO
  PALEO
  VEGETARIAN
  VEGAN
  PESCATARIAN
  LOW_CARB
}
